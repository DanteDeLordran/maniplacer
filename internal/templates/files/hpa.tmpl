apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: ""
  namespace: ""
spec:
  maxReplicas: 1
  minReplicas: 1
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: ""
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 80
  - type: Resource
    resource:
      name: memmory
      target:
        type: Utilization
        averageUtilization: 80